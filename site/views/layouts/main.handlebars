<!doctype html>

<html>
<head>
  <title>Club for Boys Library</title>
  <meta charset="UTF-8">
  <link rel='stylesheet' type='text/css' href='/css/styles.css'>
  <script src="scripts/jquery-3.3.1.min.js"></script>
</head>



<body>
  <script>

    // AUTO FOCUS THE SEARCH STUDENT FIELD (on all pages)
    $(document).ready(function () {
      // Default cursor at Student Number
      $("#scanID").textContent = "";
      console.log("document.ready: loaded...");
    }); // end on document.ready

  </script>



  <div id="container">

    <!-- HEADER -->
    <div id="titleDiv">
        <h1 id="title" style="display: inline;">Club For Boys Library</h1>
    </div>

    <!-- TITLE BAR -->
    <div id=titleBar>

      <!-- NEED TO USE onClick event with my functions! See ENGR1 project -->
      <ul class="barWhole">
        <li id="l_home">Home</li>
        <li id="l_search">Search</li>
        <li id="l_allStudents">All Students</li>
        <li id="l_newStudent">New Student</li>
        <li id="l_ticket">Tickets</li>
        <li id="l_purchase">Purchases</li>
      </ul>

    </div>




    <div id="innerContainer">

    <!-- SEARCH STUDENT BY SCANNING CARD -->
    <div><i>Scan or type the student card number for this box:</i></div>
    <form method="post" action="/searchStudentScanCard">
      <span>Student ID Number</span>
      <span><input name="scanID" id="scanID" type="number" value=""
        autofocus></span>

      <!-- SUBMIT BUTTON -->
      <span><input type="submit" value="Search" id="scanSubmitButton"></span>
    </form>
    <br>



    <!-- BODY HERE -->
    {{{body}}}


    <!-- FOOTER -->
    <div id="footer">
      <h3>--- About ---</h3>
      <p>This site was written and developed by James Cameron Abreu, an employee at
      the Club for Boys, Rapid City, South Dakota for use with the library. Site initially developed in February, 2018</p>
    </div>

  </div> <!-- innerContainer -->
  </div> <!-- container -->




  <!-- LINKS TO NODE SERVER -->
  <script>
      $("#l_home").click(function() {window.location = "/";});
      $("#l_search").click(function() {window.location = "/search";});
      $("#l_allStudents").click(function() {window.location = "/allStudents";});
      $("#l_newStudent").click(function() {window.location = "/newStudent";});
      $("#l_ticket").click(function() {window.location = "/newTicket";});
      $("#l_purchase").click(function() {window.location = "/newPurchase";});
 </script>

